@page "/"
@using Pilot.BlazorClient.Service
@inject IJsonLocalizationService Localizer

<PageTitle>@Localizer.GetString("PageTitle", HomePageName)</PageTitle>

<!-- Hero Section -->
<header class="hero">
    <div class="hero-content">
        <h1 class="hero-title">@Localizer.GetString("MainTitle", HomePageName)</h1>
        <p class="hero-subtitle">@Localizer.GetString("MainDescription", HomePageName)</p>
        <a href="/User/Registration" class="btn btn-primary hero-btn">@Localizer.GetString("GetStarted", HomePageName)</a>
    </div>
    <img src="Images/Home/main_home.png" alt="Main Image" class="hero-image"/>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</header>

<!-- Features Section -->
<section id="features" class="features">
    <h2 class="section-title">@Localizer.GetString("FeaturesTitle", HomePageName)</h2>
    <div class="feature-grid">
        <div class="feature-card feature-left">
            <div class="feature-content">
                <h3>@Localizer.GetString("Feature1.Title", HomePageName)</h3>
                <p>@Localizer.GetString("Feature1.Description", HomePageName)</p>
            </div>
            <img src="Images/Home/66f8705c1383b3000179ba84_sd3-turbo_result.webp" alt="Feature 1" class="feature-image"/>
        </div>
        <div class="feature-card feature-right">
            <img src="Images/Home/667bf17c2126de0001348083_sd3-turbo_result.webp" alt="Feature 2" class="feature-image"/>
            <div class="feature-content">
                <h3>@Localizer.GetString("Feature2.Title", HomePageName)</h3>
                <p>@Localizer.GetString("Feature2.Description", HomePageName)</p>
            </div>
        </div>
        <div class="feature-card feature-left">
            <div class="feature-content">
                <h3>@Localizer.GetString("Feature3.Title", HomePageName)</h3>
                <p>@Localizer.GetString("Feature3.Description", HomePageName)</p>
            </div>
            <img src="Images/Home/You Can Now Manage Accounts on Facebook, Instagram and Facebook Messenger Via One App.jfif" alt="Feature 3" class="feature-image"/>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about">
    <h2 class="section-title">@Localizer.GetString("AboutTitle", HomePageName)</h2>
    <div class="about-content">
        <p>@Localizer.GetString("AboutDescription", HomePageName)</p>
        <p>@Localizer.GetString("AboutMission", HomePageName)</p>
        <a href="/Account" class="btn btn-secondary">@Localizer.GetString("LearnMore", HomePageName)</a>
    </div>
</section>

<!-- Call to Action Section -->
<section id="cta" class="cta">
    <h2 class="cta-title">@Localizer.GetString("CTATitle", HomePageName)</h2>
    <p class="cta-subtitle">@Localizer.GetString("CTADescription", HomePageName)</p>
    <div class="cta-buttons">
        <a href="/User/Registration" class="btn btn-primary">@Localizer.GetString("JoinNow", HomePageName)</a>
        <a href="/Vacancy" class="btn btn-outline">@Localizer.GetString("ExploreJobs", HomePageName)</a>
    </div>
</section>

@code {
    const string HomePageName = "Home";
}